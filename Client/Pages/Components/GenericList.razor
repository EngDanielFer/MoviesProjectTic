@typeparam Titem
@if (Listado == null)
{
    @if (Loading == null)
    {
        <label class="text-muted">Cargando</label>
    }
    else
    {
        @Loading
    }
}
else if (Listado.Count == 0)
{
    @if (NoHayRegistros == null)
    {
        <label>No existen registros</label>
    }
    else
    {
        @NoHayRegistros
    }
}
else
{
    @if (HayRegistros != null)
    {
        foreach (var item in Listado)
        {
            @HayRegistros(item)
        }
    }
    else
    {
        @ItemsComplete
    }
}
@code {
    [Parameter] public RenderFragment Loading {get;set;}
    [Parameter] public RenderFragment NoHayRegistros {get;set;}
    [Parameter] public RenderFragment<Titem> HayRegistros {get;set;}
    [Parameter] public RenderFragment ItemsComplete {get;set;}
    [Parameter] public List<Titem> Listado {get;set;}
}